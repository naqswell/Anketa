<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTitleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">@dimen/_12sdp</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/inter_black</item>
    </style>

    <style name="TitleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/inter_black</item>
        <!--        <item name="rippleColor">@color/white</item>-->
        <item name="android:background">@android:color/transparent</item>
        />
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="CustomStandartText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="CustomTitleText">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_black</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>